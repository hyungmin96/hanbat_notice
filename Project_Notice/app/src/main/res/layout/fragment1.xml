<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F3F3"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="top|center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/hbun">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="한밭대 공지알리미"
                android:fontFamily="@font/nanumbarungothic"
                android:textColor="#595959"
                android:textSize="22dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="9"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="3">

            <!-- 1번째 줄 -->

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="440dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="440dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="정보기술대학"
                        android:textColor="#3D9886"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <!-- 컴퓨터공학과 -->
                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/monitor_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="컴퓨터공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 전기공학과 -->
                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/electricity_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="전기공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 전자제어공학과 -->
                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/electronics_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="전자＊제어공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 정보통신공학과 -->
                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/tree_structure_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="정보통신공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 전체공지 -->
                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/sound_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="전체공지"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="공과대학"
                        android:textColor="#3D9886"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <!-- 기계공학과 -->
                    <LinearLayout
                        android:id="@+id/기계공학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="38dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/화학생명공학과"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/job_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="기계공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 신소재공학과 -->
                    <LinearLayout
                        android:id="@+id/신소재공학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/설비공학과"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/new_product_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="신소재공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 화학생명공학과 -->
                    <LinearLayout
                        android:id="@+id/화학생명공학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/창의융합학과"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/기계공학과"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/chemistry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="화학생명공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 산업경영공학과 -->
                    <LinearLayout
                        android:id="@+id/산업경영공학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/신소재공학과"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/switch_host_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="산업경영공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 설비공학과 -->
                    <LinearLayout
                        android:id="@+id/설비공학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/stationery_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="설비공학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 창의융합학과 -->
                    <LinearLayout
                        android:id="@+id/창의융합학과"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toTopOf="@+id/기초과학부"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/화학생명공학과"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/innovation_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="창의융합학과"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 기초과학부 -->
                    <LinearLayout
                        android:id="@+id/기초과학부"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/창의융합학과"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/physics_38px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="기초과학부"
                            android:textAlignment="center"
                            android:textColor="#505050"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="invisible"
                android:layout_height="50dp"
                android:layout_width="30dp"
                />

        </GridLayout>

    </LinearLayout>

</ScrollView>